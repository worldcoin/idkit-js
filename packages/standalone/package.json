{
	"name": "@worldcoin/idkit-standalone",
	"version": "1.1.4",
	"homepage": "https://docs.worldcoin.org/id/idkit",
	"license": "MIT",
	"private": false,
	"description": "The identity SDK. Privacy-preserving identity and proof of personhood with World ID.",
	"repository": {
		"type": "git",
		"directory": "packages/standalone",
		"url": "git+https://github.com/worldcoin/idkit-js"
	},
	"type": "module",
	"main": "src/index.tsx",
	"exports": "./build/index.global.js",
	"types": "src/index.tsx",
	"engines": {
		"node": ">=12.4"
	},
	"files": [
		"build",
		"README.md"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "eslint src --ext .tsx",
		"test": "concurrently --kill-others \"http-server ./build/ -p 8080\"  \"pnpm test:browser\"",
		"test:browser": "node src/browser.test.js &",
		"prepublishOnly": "npm run build",
		"install-chrome": "puppeteer browsers install chrome"
	},
	"keywords": [
		"identity",
		"ID",
		"web3",
		"proof-of-personhood",
		"sybil resistance"
	],
	"dependencies": {
		"@worldcoin/idkit": "workspace:^",
		"react": ">18.0.0",
		"react-dom": ">18.0.0"
	},
	"devDependencies": {
		"@types/react": "18.0.25",
		"@types/react-dom": "18.0.9",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"concurrently": "^8.2.2",
		"eslint": "8.54.0",
		"http-server": "^14.1.1",
		"prettier": "^2.8.8",
		"prettier-plugin-sort-imports-desc": "^1.0.0",
		"puppeteer": "^21.6.0",
		"ts-node": "^10.9.2",
		"tsup": "^7.2.0",
		"typescript": "^5.3.2"
	}
}
